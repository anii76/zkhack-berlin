{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmitOnError": false,
    "baseUrl": "./",
    "paths": {
      "@backend/*": ["backend/*"],
      "@frontend/*": ["frontend/*"]
    }
  },
  "include": ["backend/**/*", "frontend/src/**/*"],
  "exclude": ["node_modules", "dist", "frontend/ignore"]
}
