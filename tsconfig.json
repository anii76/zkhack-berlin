{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmitOnError": false,
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@scripts/*": ["scripts/*"],
      "@contracts/*": ["contracts/*"],
      "@frontend/*": ["frontend/*"]
    }
  },
  "include": ["src/**/*", "scripts/**/*", "test/**/*", "ignition/**/*", "frontend/src/**/*"],
  "exclude": ["node_modules", "dist", "frontend/ignore", "artifacts", "cache"]
}
